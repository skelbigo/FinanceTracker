# FinanceTracker local environment
#
# 1) Copy this file to .env:
#    cp env.example .env
# 2) Start with Docker (without Redis):
#    docker compose up --build
# 3) Start with Redis cache (optional):
#    docker compose --profile cache up --build

# App
APP_ENV=dev
APP_PORT=8080
GIN_MODE=debug

# Database (preferred: DB_URL OR parts below)
DB_URL=postgres://financetracker:financetracker@localhost:5432/financetracker?sslmode=disable

DB_HOST=localhost
DB_PORT=5432
DB_USER=financetracker
DB_PASSWORD=financetracker
DB_NAME=financetracker
DB_SSLMODE=disable

# Redis (optional)
# - run: docker compose --profile cache up --build
# - set: REDIS_ENABLED=true and REDIS_HOST/REDIS_PORT as shown below.
REDIS_ENABLED=false
REDIS_HOST=
REDIS_PORT=
REDIS_PASSWORD=
REDIS_DB=0

# Example for Docker Compose + profile "cache":
# REDIS_ENABLED=true
# REDIS_HOST=redis
# REDIS_PORT=6379
# REDIS_PASSWORD=
# REDIS_DB=0

# Auth
JWT_SECRET=change_me_in_dev
JWT_ACCESS_TTL_MINUTES=15
JWT_REFRESH_TTL_DAYS=30

# TLS / Reverse proxy
TLS_ENABLED=false
TLS_CERT_FILE=
TLS_KEY_FILE=

# Email (password reset + notifications; may be implemented later)
EMAIL_ENABLED=false
EMAIL_FROM=no-reply@financetracker.local
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_TLS=true

# Metrics / Observability
METRICS_ENABLED=true
METRICS_PATH=/metrics
LOG_LEVEL=info

# Feature flags
BUDGETS_ENFORCE_EXPENSE_CATEGORIES=true